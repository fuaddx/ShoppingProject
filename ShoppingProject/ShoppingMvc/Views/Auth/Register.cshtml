@model RegisterVm
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="index.html" rel="nofollow">Home</a>
                <span></span> Pages
                <span></span> Register
            </div>
        </div>
    </div>
    <section class="pt-150 pb-150">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 m-auto">
                    <div class="row" style="justify-content:center">
                        <div class="col-lg-6">
                            <div class="login_wrap widget-taber-content p-30 background-white border-radius-5">
                                <div class="padding_eight_all bg-white">
                                    <div class="heading_s1">
                                        <h3 class="mb-30">Create an Account</h3>
                                    </div>
                                    <p class="mb-50 font-sm">
                                        Your personal data will be used to support your experience throughout this website, to manage access to your account, and for other purposes described in our privacy policy
                                    </p>
                                    <form asp-action="Register" method="post">
                                        <div class="form-group">
                                            <input asp-for="Name" class="form-control form-control-user"
                                                   placeholder=" Name">
                                            <span asp-validation-for=" Name" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Surname" class="form-control form-control-user"
                                                   placeholder="Surname">
                                            <span asp-validation-for=" Surname" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Username" class="form-control form-control-user"
                                                   placeholder="Username...">
                                            <span asp-validation-for=" Username" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input asp-for=" Email" class="form-control form-control-user"
                                                   placeholder=" Email">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">

                                            <input asp-for="Password" id="password-field" class="form-control form-control-user" placeholder=" Passworrd">
                                            <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                            <span asp-validation-for="Password" class="text-danger"></span>

                                        </div>
                                        <div class="form-group">
                                            <input asp-for="PasswordConfirm" class="form-control form-control-user"
                                                   placeholder=" Confirm password...">
                                            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                                        </div>
                                        <div class="login_footer form-group">
                                            <div class="chek-form">
                                                <div class="custome-checkbox">
                                                    <input class="form-check-input" type="checkbox" name="checkbox" id="exampleCheckbox12" value="">
                                                    <label class="form-check-label" for="exampleCheckbox12"><span>I agree to terms &amp; Policy.</span></label>
                                                </div>
                                            </div>
                                            <a href="page-privacy-policy.html"><i class="fi-rs-book-alt mr-5 text-muted"></i>Lean more</a>
                                        </div>
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        @if (ViewBag.RegistrationSuccess != null && (bool)ViewBag.RegistrationSuccess)
                                        {
                                            <p class="text-success" style="text-align:center;font-size:20px">Register successfully</p>
                                            <br />
                                            <button type="submit" class="btn btn-fill-out btn-block hover-up" name="login">Submit &amp; Register</button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-fill-out btn-block hover-up" name="login">Submit &amp; Register</button>
                                        }

                                    </form>
                                    
                                    <div class="divider-text-center mt-15 mb-15">
                                        <span> or</span>
                                    </div>
                                    <div class="text-muted text-center">Already have an account? <a asp-action="Login">Sign in now</a></div>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" asp-controller="Home" asp-action="Index">Go Back</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>