                            "showEasing": "swing",
                            "hideEasing": "linear",
                            "showMethod": "fadeIn",
                            "hideMethod": "fadeOut"
                        }
                    }
                })
        });
    </script>

    <script>
        // JavaScript function to apply price filter
        function applyPriceFilter() {
            var minPrice = $("#slider-range").slider("values", 0);
            var maxPrice = $("#slider-range").slider("values", 1);
            var found = false;

            $(".product-cart-wrap").each(function () {
                var productPrice = parseFloat($(this).data("price"));
                if (productPrice >= minPrice && productPrice <= maxPrice) {
                    $(this).show();
                    found = true;
                } else {
                    $(this).hide();
                }
            });
            if (!found) {
                $("#nothing-found").show();
            } else {
                $("#nothing-found").hide();
            }
        }

        // jQuery UI slider initialization
        $(function () {
            var minSellPrice = 16;
            var maxSellPrice = 400;

            $("#slider-range").slider({
                range: true,
                min: minSellPrice,
                max: maxSellPrice,
                values: [minSellPrice, maxSellPrice], // Set default values for the slider
                slide: function (event, ui) {
                    $("#amount").val("$" + ui.values[0] + " - $" + ui.values[1]);
                }
            });
            $("#amount").val("$" + $("#slider-range").slider("values", 0) +
                " - $" + $("#slider-range").slider("values", 1));
        });
    </script>

    <script>
        function sortProducts(sortBy) {
            var productList = $("#product-list");
            var productWrappers = productList.children(".product-cart-wrap").get();

            productWrappers.sort(function (a, b) {
                var aValue, bValue;

                switch (sortBy) {
                    case 'PriceHighToLow':
                    case 'PriceLowToHigh':
                        aValue = parseFloat($(a).data('price'));
                        bValue = parseFloat($(b).data('price'));
                        break;
                    case 'ReleaseDate':
                        aValue = new Date($(a).data('created-date'));
                        bValue = new Date($(b).data('created-date'));
                        break;
                    case 'Rating':
                        aValue = parseFloat($(a).data('rating'));
                        bValue = parseFloat($(b).data('rating'));
                        break;
                }


                return sortBy === 'PriceHighToLow' || sortBy === 'ReleaseDate' ? aValue - bValue : bValue - aValue;
            });

            productList.empty().append(productWrappers);
            $("#sort-by-selected").text(sortBy);
        }
    </script>


    <script>
    var itemsPerPage = 7;

        function displayProducts(pageNumber) {
            var productList = $("#product-list");
            var products = productList.children(".product-cart-wrap");

            // Calculate the index range of products to display for the given page number
            var startIndex = (pageNumber - 1) * itemsPerPage;
            var endIndex = startIndex + itemsPerPage;

            // Hide all products
            products.hide();

            // Display products for the current page
            products.slice(startIndex, endIndex).show();

            // Update the total number of products displayed
            updateTotalProductCount(products.length);
        }

        function updateTotalProductCount(totalProducts) {
            $(".totall-product strong").text(totalProducts);
        }

        // Example usage:
        $(document).ready(function () {
            // Initial display of products (page 1)
            displayProducts(1);
        });
</script>

<script>
        function updateItemCount() {
            var visibleProducts = $("#product-list .product-cart-wrap:visible").length;
            $("#item-count").text(visibleProducts);
        }

        // Call the function when the page loads and whenever the number of visible products changes
        $(document).ready(function () {
            updateItemCount();
        });

        // Function to display products for the current page
        function displayProducts() {
            var productWrappers = $("#product-list .product-cart-wrap");

            // Hide all products
            productWrappers.hide();

            if (itemsPerPage === 'All') {
                // Show all products if 'All' is selected
                productWrappers.show();
            } else {
                // Show the specified number of products per page
                productWrappers.slice(0, itemsPerPage).show();
            }

            // Update the item count
            updateItemCount();
        }
</script>
}
